# Auto detect text files and perform LF normalization
* text=auto

# Ensure .cs files use CRLF line endings on Windows
*.cs text eol=crlf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Project files and configurations
*.csproj text eol=crlf
*.sln text eol=crlf
*.config text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf
*.txt text eol=crlf

# Resources and localization
*.resx text eol=crlf
*.resw text eol=crlf

# Scripts (use LF for cross-platform compatibility)
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
